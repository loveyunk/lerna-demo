{
  "packages": ["packages/*", "apps/*"],
  "npmClient": "yarn",
  "version": "independent",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "allowBranch": "master",
      "message": "chore(release): publish %s",
      "ignoreChanges": ["apps/**", "**/*.test.js", "**/*.spec.js", "**/*.mdx", "**/*.md"]
    }
  }
}
